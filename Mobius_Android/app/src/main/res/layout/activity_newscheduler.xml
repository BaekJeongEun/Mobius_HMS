<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".newscheduler"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

  <com.prolificinteractive.materialcalendarview.MaterialCalendarView
      android:id="@+id/calendar"
      android:layout_width="931dp"
      android:layout_height="786dp"
      app:mcv_selectionColor="@color/colorPrimary"
      app:mcv_showOtherDates="defaults"></com.prolificinteractive.materialcalendarview.MaterialCalendarView>


  <TextView
      android:id="@+id/infoTextView"
      android:layout_width="558dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginLeft="10sp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="40dp"
      android:text="해당 날짜의 정보를 보여줍니다."
      android:textSize="20sp"
      android:textColor="#000000"
      android:gravity="center"/>

  <LinearLayout
      android:layout_width="558dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_gravity="center"
      android:layout_marginBottom="20dp"
      android:focusable="true"
      android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약 등록하기"
        android:textSize="25dp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="날짜: "
          android:textColor="#000000"
          android:textSize="20sp"/>

      <EditText
          android:id="@+id/wantDay"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="15sp"
          android:hint="00"
          android:textSize="20sp"
          />

      <EditText
          android:id="@+id/wantText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:hint="예약을 입력하시오                                 " />

      <Button
          android:id="@+id/registerButton"
          android:layout_marginLeft="25sp"
          android:layout_width="120sp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="등록"
          android:textSize="20sp"
          android:background="@color/colorMyBlue"/>


    </LinearLayout>



  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:layout_gravity="center"
      android:gravity="center"
      android:orientation="horizontal"

      android:layout_marginTop="20dp">

    <Button
        android:id="@+id/searchButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginRight="20sp"
        android:text="환자 정보로 이동하기"
        android:textSize="20sp"
        android:background="@color/colorMyBlue"/>

    <Button
        android:id="@+id/returnButton"
        android:layout_width="200dp"
        android:layout_marginLeft="20sp"
        android:layout_height="wrap_content"
        android:text="Return"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:background="@color/colorMyBBlue"/>



  </LinearLayout>






</LinearLayout>