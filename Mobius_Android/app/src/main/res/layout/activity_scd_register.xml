<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="25sp"
    android:layout_marginRight="25sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_marginBottom="70sp"
            android:gravity="center"
            android:text="환자 정보 관리"
            android:textColor="#000000"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="환자 등록"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="50sp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/rNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="1"
                    android:ems="15"
                    android:hint="(이름)"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/rGenderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="1"
                    android:ems="15"
                    android:hint="(성별:남자,여자)"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/rAgeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="1"
                    android:ems="15"
                    android:hint="(나이)"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/rDiseaseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="1"
                    android:ems="15"
                    android:hint="(질병)"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/rTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="1"
                    android:ems="15"
                    android:hint="(투약시간)"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/rNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="1"
                    android:ems="15"
                    android:hint="(보호자 연락처:***-****-****)"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <Button
                android:id="@+id/rButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:text="등록하기"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/wholeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp"
        android:gravity="center">

        <Button
            android:id="@+id/goCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스케줄러로 돌아가기"
            android:layout_marginRight="10sp"/>

        <Button
            android:id="@+id/goSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환자 검색으로 이동"
            android:layout_marginLeft="10sp"/>


    </LinearLayout>

</LinearLayout>