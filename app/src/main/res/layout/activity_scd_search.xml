<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="25sp"
    android:layout_marginRight="25sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="환자 정보 관리화면"
            android:textStyle="bold"
            android:textSize="50sp"
            android:layout_marginTop="40sp"
            android:layout_marginBottom="70sp"
            android:textColor="#000000"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorMyBlue"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="50sp"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:fillViewport="true"
                android:layout_weight="1"
                >

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp">

                </ListView>


            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="50sp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/InfoName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginBottom="20sp"
                        android:text="할머니,할아버지의 정보"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/InfoGenderAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginBottom="10sp"
                        android:text="성별, 나이"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/InfoDisease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginBottom="10sp"
                        android:text="병명"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/InfoTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginBottom="10sp"
                        android:text="투약시간"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/InfoNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginBottom="10sp"
                        android:text="보호자 연락처"
                        android:textSize="20sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/searchTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:text="검색"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="40sp"
                    >

                    <EditText
                        android:id="@+id/searchNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="이름을 입력하세요."
                        android:inputType="textPersonName" />

                    <Button
                        android:id="@+id/searchNameButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="click"
                        android:layout_marginRight="50dp"
                        android:background="#ffffff"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/wholeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/goCalendar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="스케줄러로 돌아가기"
            android:layout_marginRight="10sp"
            android:textSize="20sp"
            android:background="@color/colorMyBlue"/>


    </LinearLayout>

</LinearLayout>